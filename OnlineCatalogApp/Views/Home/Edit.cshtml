@model ProductCatalog.Models.Product
@{
    ViewData["Title"] = "Edit";

}
<h2>Edit</h2>

<h4>CatalogItem</h4>
@section Scripts
    {
    <script src="@Url.Content("~/js/file.js")"></script>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            @Html.HiddenFor(model => model.RowVersion)
           <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>

                <input asp-for="Photo" id="uploadImage" type="file" class="form-control" onchange="PreviewImage();" class="btn btn-primary"/>
               
                <br/>
                <img id="uploadPreview" width="0" height="0" style="display:block" src="" />

                @if (Model.Photo != null)
                {
                    <img id="uploadPreviewOld" src="data:image;base64,@System.Convert.ToBase64String(Model.Photo)" width="100" height="100" />
                }
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">in £</label>
                <input asp-for="Price" class="form-control" id="txtPrice" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" onclick="ConfirmPrice();"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

